/* -----------------------------------------------------
 *                      General
 * ----------------------------------------------------- */
/* Colors */
@define-color bg  #282828;
@define-color bg2 #525252;
@define-color bg3 #393939;
@define-color fg  #D8D8D8;
@define-color red #DA1E28;
@define-color blue #78A9FF;
@define-color purple #BE95FF;

* {
    font-family: Hack Nerd Font,sans-serif;
    font-size: 14px;
    border-radius: 0;
    border: none;
    box-shadow: none;
}

/* -----------------------------------------------------
 *                      Tooltip
 * ----------------------------------------------------- */

tooltip {
    background: @bg;
    border: solid 1px @bg3;
}
tooltip label {
    color: @fg;
}

/* -----------------------------------------------------
 *                      Window
 * ----------------------------------------------------- */

window#waybar {
   /* background-color: rgba(16, 20, 25,0.5); */
    background-color: @bg;

}

window#waybar.hidden {
    opacity: 0.2;
}

#window {
    color: @fg;
    padding: 0 10px;
}

/* -----------------------------------------------------
 *                  Workspaces
 * ----------------------------------------------------- */

#taskbar {
  background-color: @bg;
  padding: 2px 5px;
}

#taskbar button {
    min-width: 20px;
    color: @bg2;
    padding: 0px 5px;
    font-weight: normal;
}

#taskbar button.active {
    color: @fg;
    background-color: @bg;
}

/* -----------------------------------------------------
 *                      Modules
 * ----------------------------------------------------- */

#cpu,
#memory ,
#battery,
#pulseaudio,
#wireplumber,
#tray,
#battery.charging,
#battery.plugged,
#network {
    color: @fg;
    padding: 0 6px;
    margin: 2px 2px 2px 2px;
}

#network.disconnected {
    color: @purple;
}

#clock {
    color: @fg;
    padding: 0 5px;
    margin: 2px 2px 2px 2px;
}

#battery.critical:not(.charging) {
    background-color: @red;
    color: @fg;
    margin: 2px 2px 2px 2px;
}

@keyframes blink {
    to {
        background-color: #ffffff;
        color: #000000;
    }
}

